# Database Configuration
DB_PASSWORD=activitywatch_password

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_MAX_MEMORY=256mb

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Watcher Configuration
# IMPORTANT: Watchers are NOT Docker containers - they are standalone applications
# that run on your host machine and connect directly to the API server.
# Watchers connect to: http://localhost:5600
# Watchers can be configured via:
#   - Command line: --host 127.0.0.1 --port 5600
#   - Environment variables: API_HOST and API_PORT
#   - Config files: ~/.config/aw-client/config.toml
WATCHER_API_HOST=127.0.0.1
WATCHER_API_PORT=5600

# Security Configuration
JWT_SECRET=change_this_secret_in_production_use_long_random_string

# Domain Configuration (for TLS certificates)
DOMAIN=localhost
ACME_EMAIL=admin@example.com

# Environment
ENVIRONMENT=development

